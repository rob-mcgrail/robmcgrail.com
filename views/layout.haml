!!!
%html{:lang => 'eng'}
    %head
        %meta{:charset => 'utf-8'}
        %title= @title || ''
        = stylesheet_link_tag '/stylesheets/baseline.compress.css', '/stylesheets/content.css', '/stylesheets/buttons.css', "/stylesheets/code/#{settings.highlighting}.css"
        = javascript_script_tag '/js/jquery-1.5.1.min.js', '/js/hints.js'
        /[if lte IE 8]
            = javascript_script_tag '/js/html5.js'
        :javascript
            $(document).ready(function() {$('input[title]').inputHints();});
    %body(id='page' style='background-image:url("#{@background_url}");background-repeat:repeat;')
        %div(class='column unitx5 first' id='main-content')
            = haml :flashes
            = haml @header || :header
            %div
                = yield if block_given?
            %footer.line.unitx5.column.first
                %div
                    %small.subtle
                        ~ textile @footer || :'content/footer'
        %nav(class='column unitx2')
            = haml @nav || :nav

