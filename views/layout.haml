!!!
%html{:lang => 'eng'}
    %head
        %meta{:charset => 'utf-8'}
        %title= @title || ''
        = stylesheet_link_tag '/stylesheets/baseline.compress.css', '/stylesheets/content.css', '/stylesheets/buttons.css', "/stylesheets/code/#{settings.highlighting}.css"
        = javascript_script_tag '/js/jquery-1.5.1.min.js'
        /[if lte IE 8]
            = javascript_script_tag '/js/html5.js'
    %body#page
        = haml @header || :header
        %div(class='column unitx5 first' id='main-content')
            = yield if block_given?
        %nav(class='column unitx2')
            = haml @nav || :nav

        %footer.line
            %div(class='column unitx5 first')
                %small.subtle
                    ~ textile @footer || :'content/footer'

