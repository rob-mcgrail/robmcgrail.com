%h2= 'Edit ' + @post.title
%form(id='edit' method='post' action='/blog/edit/#{@post.id}')
    %label
        Title / Slug
        %br
        %input(name='title' type='text' value='#{@post.title}' size='40' title='Title')
    %input(name='slug' type='text' value='#{@post.slug}' size='40' title='slug-is-this-one')
    %br
    %label
        Body
        %br
        %textarea(name='body' cols='55' rows='30' title='Hmmm...')
            ~ @post.body.gsub("\n","")
    %br
    %label
        Category
        %br
        %input(name='category' type='text' value='#{@post.category}' title='category')
    %br
    %label
        Tags
        %br
        %input(name='tags' type='text' value='#{@post.tag_collection}' title='tag, tag, tag')
    %br
    %button(type='submit')
        Update

