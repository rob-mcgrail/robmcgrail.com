%h2= 'New post'
= haml :flashes
%form(id='edit' method='post' action='/blog/new-post/')
    %label
        Title
        %br
        %input(name='title' type='text' size='40' required='required')
    %br
    %label
        Body
        %br
        %textarea(name='body' cols='60' rows='30' required='required')
    %br
    %label
        Category
        %br
        %input(name='category' type='text' required='required')
    %br
    %label
        Tags
        %br
        %input(name='tags' type='text')
    %br
    %button(type='submit')
        Post

